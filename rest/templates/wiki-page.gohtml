{{define "wiki-page"}}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset='UTF-8'>
        <meta name='viewport' content='width=device-width, initial-scale=1.0'>
        <meta name='color-scheme' content='dark light'>
        <title>{{.Title}}</title>
        {{template "css-base"}}
        <style>

            /* inherited classes */
            .thumbcaption {
                display: none;
            }

            section.prev-next-buttons {
                display: grid;
                grid-template-columns: 47.5% auto 47.5%;
                flex-direction: row;
                width: 100%;
                margin-block: var(--large);

                & button {

                    & a {
                        color: var(--background-color);
                    }
                }

                & .previous {
                    align-self: start;
                }

                & .next {
                    align-self: end;
                }
            }

            p {
                width: 100%;
            }

            img {
                max-width: 100%;
            }

            ul.dates {

                font-size: var(--fs-x-smaller);
                row-gap: var(--x-small);

                & h3 {
                    margin-block: 0;
                }

                & time {
                    color: var(--subtle-color);
                }
            }

        </style>
    </head>
    <body>


    <h1>{{.Title}}</h1>
    <ul class="dates">
        <li>
            <h3>Published</h3>
            <time>{{.PublishDate}}</time>
        </li>
        <li>
            <h3>Updated</h3>
            <time>{{.UpdatedAt}}</time>
        </li>
    </ul>

    {{range .Entities}}
        {{.}}
    {{end}}

    <section class="prev-next-buttons">
        <button>
            {{if .PrevPageUrl}}
                <a class="previous" href="{{.PrevPageUrl}}">
                    {{.PrevPageLabel}}
                </a>
            {{end}}
        </button>
        <span></span>
        <button>
            {{if .NextPageUrl}}
                <a class="next" href="{{.NextPageUrl}}">
                    {{.NextPageLabel}}
                </a>
            {{end}}
        </button>
    </section>

    </body>
    </html>
{{end}}